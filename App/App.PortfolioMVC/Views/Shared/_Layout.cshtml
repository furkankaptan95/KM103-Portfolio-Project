<!DOCTYPE html>
<html lang="tr">
<head>
    <partial name="Partials/PageHead.cshtml">
        @await RenderSectionAsync("Styles", required: false)
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    @{
        if (TempData["Message"] is not null)
        {
            <div class="alert custom-alert-success mt-5">
                @TempData["Message"]
            </div>
        }

        if (TempData["ErrorMessage"] is not null)
        {
            <div class="alert custom-alert-error mt-5">
                @TempData["ErrorMessage"]
            </div>
        }
    }

    <partial name="Partials/Navbar.cshtml">

        @RenderBody()

        <partial name="Partials/Footer.cshtml">

            <!-- loader -->
            <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

            <partial name="Partials/PageScripts.cshtml">

                @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
