@model List<AllExperiencesPortfolioViewModel>

<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-10 heading-section text-center ftco-animate">
                <h1 class="big big-2">Deneyimler</h1>
                <h2 class="mb-4">Deneyimlerim</h2>
                <p style="color:wheat;">Şu ana kadarki deneyimlerimi aşağıda bulabilirsiniz.</p>
            </div>
        </div>
        <div class="row">

    @if(Model!=null && Model.Any())
	{
		@foreach (var experience in Model)
		{
            int i = 0;

                @if (i % 2 == 0)
                {
                    <div class="col-md-6">
                        <div class="resume-wrap ftco-animate">
                                <span class="date">@experience.StartDate.ToString("yyyy") - @(experience.EndDate?.ToString("yyyy") ?? "Devam Ediyor")</span>
                            <h2>@experience.Title</h2>
                                <span class="position">@experience.Company</span>
                                <p class="mt-4">@experience.Description</p>
                        </div>
                    </div>
                }


                @if (i % 2 == 1)
                {
                        <div class="col-md-6">
                            <div class="resume-wrap ftco-animate">
                                <span class="date">@experience.StartDate.ToString("yyyy") - @(experience.EndDate?.ToString("yyyy") ?? "Devam Ediyor")</span>
                                <h2>@experience.Title</h2>
                                <span class="position">@experience.Company</span>
                                <p class="mt-4">@experience.Description</p>
                            </div>
                        </div>
                }

            i++;
        }
    }

            else if (Model != null && Model.Count == 0)
            {
                <div class="col-12 text-center">
                    <h3 class="mt-5">Şu Anda Deneyim Bilgisi Bulunmuyor</h3>
                </div>
            }
            else
            {
                <div class="col-12 text-center">
                    <h3 class="mt-5">Şu Anda Deneyim Bilgisine Ulaşılamıyor</h3>
                </div>
            }
            
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 text-center ftco-animate">
                <p><a href="#" class="btn btn-primary py-4 px-5">Özgemişim</a></p>
            </div>
        </div>
    </div>
</section>