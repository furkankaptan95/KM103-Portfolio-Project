@model List<HomeBlogPostsPortfolioViewModel>

<section class="ftco-section" id="blog-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">Blog</h1>
                <h2 class="mb-4">Blog Postlarım</h2>
                <p style="color:wheat;">Blog Postlarımı görüntüleyebilir ve yorum yazarak görüşlerinizi benimle ve diğer okurlarla paylaşabilirsiniz.</p>
            </div>
        </div>
        <div class="row d-flex justify-content-center">

            @if(Model is not null && Model.Count > 0)
            {
                @foreach (var blogPost in Model)
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry justify-content-end">
                            <a href="/blog-post-@blogPost.Id" class="block-20" style="background-image: url('images/image_1.jpg');">
                            </a>
                            <div class="text mt-3 float-right d-block">
                                <div class="d-flex align-items-center mb-3 meta">
                                    <p class="mb-0">
                                        <span class="mr-2">@blogPost.PublishDate.ToString("dd MMMM yyyy")</span>
                                        <a href="#" class="meta-chat ml-5"><span class="icon-chat"></span> @blogPost.CommentsCount</a>
                                    </p>
                                </div>
                                <h3 class="heading"><a href="single.html">@blogPost.Title</a></h3>
                                <p>
                                    @blogPost.Content.Substring(0, Math.Min(100, @blogPost.Content.Length))
                                </p>
                            </div>
                        </div>
                    </div>

                }
            }
            else if (Model != null && Model.Count == 0)
            {
                <div class="col-12 text-center">
                    <h3>Şu Anda Görüntülenecek Bir Blog Post Bulunmuyor</h3>
                </div>
            }
            else
            {
                <div class="col-12 text-center">
                    <h3>Şu Anda Blog Post Bilgisine Ulaşılamıyor</h3>
                </div>
            }
           

            
        </div>
        <!-- Daha Fazlası Butonu -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-4 text-center">
                <a href="#" class="btn btn-primary py-2 px-4">Daha Fazla Blog Post</a>
            </div>
        </div>
    </div>
</section>