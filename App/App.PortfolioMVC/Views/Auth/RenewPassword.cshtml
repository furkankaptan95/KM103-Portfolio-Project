@model NewPasswordViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>Şifremi Yenile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login/css/style.css">

    <style>
        .text-danger {
            color: black !important; /* text-danger sınıfının rengini siyah yap */
        }
    </style>

</head>
<body class="img js-fullheight" style="background-image: url(/login/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Şifre Yenileme</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <p class="mb-4 text-center">Lütfen 8 ile 15 karakter arasında yeni şifrenizi giriniz.</p>
                        <form id="passwordForm" asp-action="RenewPassword" class="signin-form">

                            <input type="hidden" asp-for="Email">

                            <div class="form-group">
                                <input id="password-field" asp-for="Password" class="form-control" placeholder="Şifre" required>
                                <span id="passwordError" class="text-danger"></span> <!-- Hata mesajı için span -->
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <input id="confirm-password-field" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrarı" required>
                                <span id="confirmPasswordError" class="text-danger"></span> <!-- Hata mesajı için span -->
                                <span toggle="#confirm-password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Şifreyi Yenile</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script>
        document.getElementById('passwordForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Formun gönderilmesini engelle

            // Hata mesajlarını temizle
            document.getElementById('passwordError').innerText = '';
            document.getElementById('confirmPasswordError').innerText = '';

            // Değerleri al
            const password = document.getElementById('password-field').value.trim();
            const confirmPassword = document.getElementById('confirm-password-field').value.trim();

            let hasError = false;

            // Şifre validasyonu
            if (!password) {
                document.getElementById('passwordError').innerText = 'Şifre alanı boş olamaz.';
                hasError = true;
            } else if (password.length < 8 || password.length > 15) {
                document.getElementById('passwordError').innerText = 'Şifre 8 ile 15 karakter arasında olmalıdır.';
                hasError = true;
            }

            // Şifre tekrarı validasyonu
            if (!confirmPassword) {
                document.getElementById('confirmPasswordError').innerText = 'Şifre tekrarı alanı boş olamaz.';
                hasError = true;
            } else if (confirmPassword !== password) {
                document.getElementById('confirmPasswordError').innerText = 'Şifreler eşleşmiyor.';
                hasError = true;
            }

            // Hatalar yoksa formu gönder
            if (!hasError) {
                this.submit(); // Formu sunucuya gönder
            }
        });
    </script>
    <script src="~/login/js/jquery.min.js"></script>
    <script src="~/login/js/popper.js"></script>
    <script src="~/login/js/bootstrap.min.js"></script>
    <script src="~/login/js/main.js"></script>
</body>
</html>
