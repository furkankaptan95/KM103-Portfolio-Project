@model LoginViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login/css/style.css">

    <style>
        .text-danger {
            color: black !important; /* text-danger sınıfının rengini siyah yap */
        }
    </style>

</head>
<body class="img js-fullheight" style="background-image: url(/login/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Giriş Yap</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <p class="mb-4 text-center">Email adresiniz ve şifreniz ile giriş yapabilirsiniz.</p>
                        <form id="loginForm" asp-action="Login" class="signin-form">

                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="Email">
                                <span id="emailError" class="text-danger"></span> <!-- Hata mesajı için span -->
                            </div>

                            <div class="form-group">
                                <input id="password-field" asp-for="Password" class="form-control" placeholder="Şifre">
                                <span id="passwordError" class="text-danger"></span> <!-- Hata mesajı için span -->
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>

                            <p class="w-100 text-center">Hesabınız Yok Mu? <a asp-action="Register" style="color: #fff"> Kayıt Olun</a></p>

                            <div class="text-center">
                                <a href="#" style="color: #fff">Şifremi Unuttum</a>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Formun gönderilmesini engelle

            // Hata mesajlarını temizle
            document.getElementById('emailError').innerText = '';
            document.getElementById('passwordError').innerText = '';

            // Değerleri al
            const email = document.getElementById('Email').value.trim();
            const password = document.getElementById('password-field').value.trim();

            let hasError = false;

            // Email validasyonu
            const emailPattern = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!email) {
                document.getElementById('emailError').innerText = 'Email alanı boş olamaz.';
                hasError = true;
            } else if (email.length > 100) {
                document.getElementById('emailError').innerText = 'Email en fazla 100 karakter olabilir.';
                hasError = true;
            } else if (!emailPattern.test(email)) {
                document.getElementById('emailError').innerText = 'Geçerli bir email adresi giriniz.';
                hasError = true;
            }

            // Şifre validasyonu
            if (!password) {
                document.getElementById('passwordError').innerText = 'Şifre alanı boş olamaz.';
                hasError = true;
            } else if (password.length < 8 || password.length > 15) {
                document.getElementById('passwordError').innerText = 'Şifre 8 ile 15 karakter arasında olmalıdır.';
                hasError = true;
            }

            // Hatalar yoksa formu gönder
            if (!hasError) {
                this.submit(); // Formu sunucuya gönder
            }
        });
    </script>

    <script src="~/login/js/jquery.min.js"></script>
    <script src="~/login/js/popper.js"></script>
    <script src="~/login/js/bootstrap.min.js"></script>
    <script src="~/login/js/main.js"></script>
</body>
</html>
