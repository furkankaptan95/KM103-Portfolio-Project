@using System.Security.Claims
@{
    Layout = null;
    var userId = User.Claims.First(claim => claim.Type == "sub").Value;
    var email = User.Claims.First(claim => claim.Type == "email").Value;
    var username = User.Claims.First(claim => claim.Type == "name").Value;
    var profileImageUrl = User.FindFirst("user-img")?.Value ?? "default-user-img.png";
}

   

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1b1b1b;
            color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .profile-container {
            background-color: #292b2c;
            border-radius: 10px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .profile-pic {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 3px solid #f8f9fa;
            margin-bottom: 1rem;
        }

        .edit-btn, .add-btn {
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #f8f9fa;
        }

            .edit-btn:hover, .add-btn:hover {
                color: #ffc107;
            }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .info-container {
            margin-top: 1rem;
            background-color: #343a40;
            padding: 0.8rem;
            border-radius: 5px;
        }

        .label {
            font-weight: bold;
            color: #adb5bd;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="text-center">
            <img src="~/images/@profileImageUrl" alt="Profil Resmi" class="profile-pic" id="profilePicture">
            <div class="btn-container">
                <button class="btn btn-sm btn-outline-light add-btn" id="editProfilePicBtn">Ekle/Düzenle</button>
            </div>
        </div>

        <div class="info-container">
            <div class="label">Kullanıcı Adı:</div>
            <div id="username">@username</div>
            <button class="btn btn-sm btn-outline-light edit-btn" id="editUsernameBtn">Düzenle</button>
        </div>

        <div class="info-container">
            <div class="label">Email:</div>
            <div id="email">@email</div>
        </div>
    </div>
</body>
</html>
