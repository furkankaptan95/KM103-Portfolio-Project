@model SingleBlogPostViewModel

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate">
                <!-- Breadcrumbs Eklendi -->
                <p class="breadcrumbs">
                    <span class="mr-2"><a href="/">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span>
                    <span class="mr-2"><a href="/#blog-section">Blog Post <i class="ion-ios-arrow-forward"></i></a></span>
                    <span>@Model.Title<i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h2 class="mb-3">@Model.Title</h2>
                <p>
                    @Model.Content
                </p>
                <div class="tag-widget post-tag-container mb-5 mt-5">
                </div>

                <div class="about-author d-flex p-4 bg-dark">
                    <div class="bio mr-5">
                        <img src="images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
                    </div>
                    <div class="desc">
                        <h3>George Washington</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                    </div>
                </div>


                <div class="pt-5 mt-5">
                    <h3 class="mb-5">@Model.Comments.Count Yorum</h3>
                    <ul class="comment-list">

                        @foreach(var comment in Model.Comments)
                        {
                            <li class="comment">
                                <div class="vcard bio">
                                    <img src="images/person_1.jpg" alt="Image placeholder">
                                </div>
                                <div class="comment-body">
                                    <h3>@comment.Commenter</h3>
                                    <div class="meta">@comment.CreatedAt.ToString("dd MMMM yyyy HH:mm")</div>
                                    <p>@comment.Content</p>
                                </div>
                            </li>
                        }
                    </ul>
                    <!-- END comment-list -->

                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Yorum Yapın</h3>
                        <form action="#" class="p-5 bg-dark">
                            <div class="form-group">
                                <label for="name">İsim</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="message">Mesaj</label>
                                <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn py-3 px-4 btn-primary">Gönder</button>
                            </div>
                            <div class="form-group">
                                <p class="text-muted mt-2" style="font-size: 14px;">*Yorumunuz Yönetici onayından sonra yayınlanacaktır.</p>
                            </div>
                        </form>
                    </div>
                </div>

            </div> <!-- .col-md-8 -->
            <div class="col-lg-4 sidebar ftco-animate">
             
                <div class="sidebar-box ftco-animate">
                    <h3 class="heading-sidebar">En Son Yayınlananlar</h3>
                    <div class="block-21 mb-4 d-flex">
                        <a class="blog-img mr-4" style="background-image: url(images/image_1.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Why Lead Generation is Key for Business Growth</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> March 12, 2019</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="block-21 mb-4 d-flex">
                        <a class="blog-img mr-4" style="background-image: url(images/image_2.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Why Lead Generation is Key for Business Growth</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> March 12, 2019</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="block-21 mb-4 d-flex">
                        <a class="blog-img mr-4" style="background-image: url(images/image_3.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Why Lead Generation is Key for Business Growth</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> March 12, 2019</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3 class="heading-sidebar">Paragraph</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                </div>
            </div>

        </div>
    </div>
</section> <!-- .section -->


