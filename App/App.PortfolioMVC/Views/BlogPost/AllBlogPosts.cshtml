

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: black; /* Sayfa arka planı siyah */
            color: white; /* Yazı rengi beyaz */
        }

        .blog-entry {
            background-color: #222; /* Blog post arka plan rengi */
            border-radius: 8px; /* Kenar yuvarlama */
            padding: 20px; /* İç boşluk */
            margin-bottom: 20px; /* Alt boşluk */
            transition: transform 0.3s; /* Hover efekti için geçiş */
        }

            .blog-entry:hover {
                transform: scale(1.05); /* Hover efekti */
            }

        .block-20 {
            height: 200px; /* Resim yüksekliği */
            background-size: cover; /* Resim boyutlandırma */
            background-position: center; /* Resim pozisyonu */
        }

        .breadcrumbs {
            margin-bottom: 20px; /* Breadcrumbs altında boşluk */
            font-size: 16px; /* Yazı boyutu */
        }

        .title-section {
            margin-top: 40px; /* Üstteki boşluk */
            text-align: center; /* Ortaya hizalama */
        }

            .title-section h2 {
                font-size: 24px; /* Başlık boyutu */
                margin-bottom: 10px; /* Başlık altındaki boşluk */
            }

            .title-section p {
                font-size: 14px; /* Açıklama yazı boyutu */
                color: #ccc; /* Açıklama yazı rengi */
            }

        .container {
            max-width: 1200px; /* İçerik genişliği */
            margin: 0 auto; /* Ortada hizalama */
            padding: 20px; /* İç boşluk */
        }
    </style>

    <div class="container">
        <p class="breadcrumbs">
            <span class="mr-2"><a href="/">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span>
            <span class="mr-2"><a href="/#blog-section">Blog Post <i class="ion-ios-arrow-forward"></i></a></span>
            <span>Tüm Blog Postlar<i class="ion-ios-arrow-forward"></i></span>
        </p>

        <div class="title-section">
            <h2>Blog Postlar</h2>
            <p>Şu ana kadar paylaşılmış blog postlarını aşağıda bulabilirsiniz.</p>
        </div>

        <div class="row d-flex justify-content-center">

            @{
                // Sahte blog post verileri
                var blogPosts = new List<dynamic>
            {
            new { Id = 1, Title = "Blog Post 1", Content = "İlk blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-5), CommentsCount = 2 },
            new { Id = 2, Title = "Blog Post 2", Content = "İkinci blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-4), CommentsCount = 3 },
            new { Id = 3, Title = "Blog Post 3", Content = "Üçüncü blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-3), CommentsCount = 1 },
            new { Id = 4, Title = "Blog Post 4", Content = "Dördüncü blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-2), CommentsCount = 4 },
            new { Id = 5, Title = "Blog Post 5", Content = "Beşinci blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-1), CommentsCount = 5 },
            new { Id = 6, Title = "Blog Post 6", Content = "Altıncı blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-1), CommentsCount = 0 },
            new { Id = 7, Title = "Blog Post 7", Content = "Yedinci blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-2), CommentsCount = 6 },
            new { Id = 8, Title = "Blog Post 8", Content = "Sekizinci blog yazısı içeriği burada yer alıyor. Detaylı içerik için tıklayın.", PublishDate = DateTime.Now.AddDays(-3), CommentsCount = 2 }
            };
            }

            @if (blogPosts != null && blogPosts.Count > 0)
            {
                foreach (var blogPost in blogPosts)
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry justify-content-end">
                            <a href="/blog-post-@blogPost.Id" class="block-20" style="background-image: url('images/blog-post-img.jpg');"></a>
                            <div class="text mt-3 float-right d-block">
                                <div class="d-flex align-items-center mb-3 meta">
                                    <p class="mb-0">
                                        <span class="mr-2">@blogPost.PublishDate.ToString("dd MMMM yyyy")</span>
                                        <a class="meta-chat ml-5"><span class="icon-chat"></span> @blogPost.CommentsCount</a>
                                    </p>
                                </div>
                                <h3 class="heading">
                                    <a href="/blog-post-@blogPost.Id" class="blog-title" data-title="@blogPost.Title">@blogPost.Title</a>
                                </h3>
                                <p class="blog-content" data-content="@blogPost.Content">@blogPost.Content</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <h3>Şu Anda Blog Post Bilgilerine Ulaşılamıyor</h3>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>