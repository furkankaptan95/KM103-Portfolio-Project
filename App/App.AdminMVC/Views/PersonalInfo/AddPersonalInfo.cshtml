@model AddPersonalInfoViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Kişisel Bilgi Ekle</h2>
            <form action="/add-personal-info" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">İsim</label>
                    <input asp-for="Name" class="form-control" placeholder="İsminizi buraya yazınız" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Surname" class="control-label">Soyisim</label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyisminizi buraya yazınız" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="About" class="form-label">Hakkımda</label>
                    <textarea asp-for="About" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="About" class="text-danger" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="BirthDate" class="control-label">Doğum Tarihi</label>
                    <input asp-for="BirthDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-4 w-100">Ekle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
