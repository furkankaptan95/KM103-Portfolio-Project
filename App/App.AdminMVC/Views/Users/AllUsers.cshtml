        }

           .comments-section {
        margin-top: 20px;
    }

    .comment-list {
        border-top: 1px solid #dee2e6;
        padding-top: 10px;
    }

        .comment {
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
            padding-left: 15px; /* Yorumlara soldan boşluk ekledim */
        }

    .comment:last-child {
        border-bottom: none;
    }

    .comment-content {
        margin-bottom: 5px;
    }

    .comment-status {
        font-weight: bold;
        margin-top: 5px;
    }

    @@media (max-width: 576px) {
        .comment {
            padding: 5px 0;
        }
    }

    </style>
}


