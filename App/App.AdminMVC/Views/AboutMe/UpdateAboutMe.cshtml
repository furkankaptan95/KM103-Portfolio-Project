@model UpdateAboutMeViewModel

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Hakkımda</h5>
                <small class="text-muted float-end">Güncelleme</small>
            </div>
            <div class="card-body">

                <form action="/update-about-me" method="post" enctype="multipart/form-data">

                    <div class="mb-3 mt-3">
                        <label asp-for="Introduction" class="form-label mb-1">Giriş</label>
                        <textarea asp-for="Introduction" rows="6" class="form-control"></textarea>
                        <span asp-validation-for="Introduction" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FullName" class="control-label mb-1">Tam İsim</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Field" class="control-label mb-1">Alan</label>
                        <input asp-for="Field" class="form-control" />
                        <span asp-validation-for="Field" class="text-danger"></span>
                    </div>
               
                    <div class="container">
                        <div class="row mb-3">
                            <div class="col-12 col-md-6 mb-3 d-flex justify-content-center">
                                <div class="text-center">
                                    <h4 class="mb-3">Mevcut 1. Fotoğraf</h4>
                                    <img src="@($"https://localhost:7085/uploads/{Model.ImageUrl1}")" class="img-fluid" alt="Mevcut 1. Fotoğraf" style="max-width: 100%; max-height: 200px; object-fit: cover;">
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-3 d-flex justify-content-center">
                                <div class="text-center">
                                    <h4 class="mb-3">Mevcut 2. Fotoğraf</h4>
                                    <img src="@($"https://localhost:7085/uploads/{Model.ImageUrl2}")" class="img-fluid" alt="Mevcut 2. Fotoğraf" style="max-width: 100%; max-height: 200px; object-fit: cover;">
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="mb-3">
                        <label asp-for="ImageFile1" class="form-label mb-1">Yeni 1. Fotoğraf</label>
                        <p style ="font-size:14px;">İlk fotoğrafınızı değiştirmek istiyorsanız fotoğraf dosyası yükleyiniz.</p>
                        <p style="font-size:12px;">**Yüklemezseniz 1. fotoğrafınız aynı kalacaktır.</p>
                        <input asp-for="ImageFile1" class="form-control" type="file" accept="image/*">
                        <span asp-validation-for="ImageFile1" class="text-danger" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile2" class="form-label mb-1">Yeni 2. Fotoğraf</label>
                        <p style="font-size:14px;">İkinci fotoğrafınızı değiştirmek istiyorsanız fotoğraf dosyası yükleyiniz.</p>
                        <p style="font-size:12px;">**Yüklemezseniz 2. fotoğrafınız aynı kalacaktır.</p>
                        <input asp-for="ImageFile2" class="form-control" type="file" accept="image/*">
                        <span asp-validation-for="ImageFile2" class="text-danger" data-valmsg-replace="true"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
