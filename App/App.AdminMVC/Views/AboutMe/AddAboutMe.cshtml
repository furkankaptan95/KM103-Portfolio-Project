@model AddAboutMeViewModel

<div class="container">
    <div class="form-container">
        <div class="form-title">Hakkımda</div>
        <form asp-action="AddAboutMe" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Introduction" class="form-label">Giriş</label>
                <textarea asp-for="Introduction" rows="4" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Image1" class="form-label">1. Fotoğraf</label>
                <input asp-for="Image1" class="form-control" type="file" accept="image/*" required>
            </div>
            <div class="mb-3">
                <label asp-for="Image2" class="form-label">2. Fotoğraf</label>
                <input asp-for="Image2" class="form-control" type="file" accept="image/*" required>
            </div>
            <button type="submit" class="btn btn-custom w-100">Kaydet</button>
        </form>

    </div>
</div>



@section Styles{

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .form-title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }
    </style>

}

@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

}
