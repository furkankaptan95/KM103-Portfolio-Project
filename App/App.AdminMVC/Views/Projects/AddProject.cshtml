@model AddProjectViewModel

<div class="container">
    <div class="form-container">
        <div class="form-title">Proje Ekle</div>
        <form action="/add-project" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3 mt-3">
                <label asp-for="Title" class="form-label mb-1">Başlık</label>
                <input asp-for="Title" class="form-control" placeholder="Başlığı buraya yazınız" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label mb-1">Açıklama</label>
                <textarea asp-for="Description" rows="7" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label mb-1">Fotoğraf</label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*">
                <span asp-validation-for="ImageFile" class="text-danger" data-valmsg-replace="true"></span>
            </div>
           
            <button type="submit" class="btn btn-custom mt-2">Ekle</button>
        </form>

    </div>
</div>



@section Styles {
    <style>
        .form-container {
            max-width: 600px;
            margin: 35px auto;
            padding: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .form-title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }
    </style>
}
